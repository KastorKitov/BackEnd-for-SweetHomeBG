    <main>
        {{#if error}}
        <section class="notifications">
           <p class="notification-message">{{error}}</p>
        </section>
        {{/if}}
        <form action="/auth/register" method="POST" >
            <h1>Register</h1>

            <p>Personal info</p>
            <label for="usernmae">Username</label>
            <input id="username" type="text" name="username" placeholder="JustMyself123...">

            <label for="usernmae">Password</label>
            <input id="password" type="password" name="password" placeholder="******">

            <label for="repeat-password">Repeat Password</label>
            <input id="repeat-password" type="password" name="repeatPassword" placeholder="******">
            <hr>
            <p>Account</p>
            <label for="amount">Amount</label>
            <input id="amount" type="text" name="accountAmount" placeholder="$125.90">

            <button type="submit" value="register">Register</button>
        </form>
    </main>